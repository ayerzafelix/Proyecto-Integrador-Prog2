<%- include('./partials/head') %>
    <% if (locals.user != undefined) { %>
        <%- include("./partials/headerLogueado") %>
    <% } else { %>
        <%- include('./partials/header') %>
    <% } %>



<!DOCTYPE html>
<html lang="es">

  <main>
    <section class="section-detalle-busqueda flex-box-c">
      <% if (listaProductos.length > 0 || listaUsuarios.length > 0) { %>
      <h2>Resultado de Busqueda:</h2>

      <section class="section-playlist">

        <ol class="flex-box-c">


          <% for(let i= 0; i < listaProductos.length; i++) {%>	
			
            <div class="col-12 col-sm-6 col-lg-3">
              <section class="producto-box">
                <a href="/productos/id/<%= listaProductos[i].id %>">
                  <figure class="producto-box_image">
                    <img src= <%=listaProductos[i].fotoProducto%> alt="Producto">
                  </figure>
                  <article class="producto-box_data">
                    <h2><%= listaProductos[i].nombre%></h2>
                    <p><%= listaProductos[i].descripcion %></p>
                    <p>Comentarios: <%= listaProductos[i].comments.length %></p>
                    <p class="user">
                      Creado por: <strong> <a href="/users/profile/<%=listaProductos[i].usuario.id %>"><%= listaProductos[i].usuario.nombreUsuario%></a></strong>
                  </p>
                  </article>
                </a>
              </section>
            </div>
      
          <% } %>
          <% for(let i= 0; i<listaUsuarios.length; i++){ %>
            <p class="">
              <strong><a href="/users/profile/<%= listaUsuarios[i].id %>"><%=listaUsuarios[i].nombreUsuario%></a></strong>
            </p>
          <% } %>
        <% } else {%>
          <h2>No hay resultados para su criterio de b√∫squeda</h2>
        <% } %>

        </ol>
      </section>
    </section>
  </main>


</body>
</html>

<%- include('./partials/footer') %>