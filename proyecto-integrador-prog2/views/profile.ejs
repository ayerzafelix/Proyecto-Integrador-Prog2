<%- include('./partials/head') %>
<% if (locals.user != undefined) { %> 
<%- include('./partials/headerLogueado') %> 
<% } else { %> 
	<%- include('./partials/header') %>
<% } %> 



<!DOCTYPE html>
<html lang="es">
    
	<!-- Datos del usuario -->
	
	<section class="info-usuario container productos-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="<%=users.fotoPerfil%>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%=users.nombreUsuario%>
						<a href="/users/edit-profile">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li><%=users.mail%></li>
						<br>
						<li><%=users.producto.length%> productos</li>
						<li><%=users.comentarios.length %> comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container productos-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="productos-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			
			<% for(let i= 0; i < users.producto.length; i++) {%>	
			
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="producto-box">
						<a href="/productos/detail/<%=users.producto[i].id%>">
							<figure class="producto-box_image">
								<img src= <%=users.producto[i].fotoProducto%> alt="Producto">
							</figure>
							<article class="producto-box_data">
								<h2><%= users.producto[i].nombre%></h2>
								<p><%= users.producto[i].descripcion %></p>
								<p>Comentarios: <%= users.producto[i].comments.length %></p>
							</article>
						</a>
					</section>
				</div>
	
			<% } %>

		</div>
	</div>
	
	<!-- /Mis productos -->

	

</body>	
</html>

<%- include('./partials/footer') %>