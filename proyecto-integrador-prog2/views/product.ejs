<%- include('./partials/head') %>
<%- include('./partials/header') %>



<div class="container products-wrapper">
    <div class="d-flex align-items-center">
        <h2 class="products-title"><%= producto.producto %></h2> 
        <p class="product-detail-description">
            <a href="/productos/agregar">Editar</a>
        </p>
    </div>
    <div class="product-detail">
        <div class="row">
            <article class="col-12 col-lg-8 product-detail-info">
                <img src="/images/products/cbo.jpg" alt="" class="product-detail-img">
                <p class="product-detail-description"><%= producto.descripcion %></p>
            </article>
            <div class="col-12 col-lg-4">
                <section class="comments">


                    

                    
                <% for( let i = 0; i < comentarios.length; i++ ) { %>	
                <article>
                    <img src=%> alt="">
                    <div class="data">
                        <p class="user">
                            <strong> <a href="/users/profile"><%= comentarios[i].usuario%>: </a> </strong>
                            <%= comentarios[i].comentario%></p>
                        </div>
                </article>
            <% } %> 
                    
                </section>
                <form class="form" action="" method="get">
                    <input class="form-input" type="text" value="" placeholder="Agregar comentario">
                    <button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
                </form>
            </div>
        </div>
    </div>
</div>


<%- include('./partials/footer') %>